<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Girly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Disable ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/deep_pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_card</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>

        <!-- Optional typography fixes -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/PinkButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/PinkFabStyle</item>
    </style>

</resources>
