<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸŒ— Base App Theme with Material DayNight support -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/deep_pink</item>
        <item name="colorPrimaryVariant">@color/pink_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/soft_pink</item>
        <item name="colorSecondaryVariant">@color/hot_pink</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background & Surfaces -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status & Navigation Bars -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MaterialComponents.Subtitle1</item>

        <!-- Widgets -->
        <item name="materialButtonStyle">@style/PinkButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/PinkFabStyle</item>
    </style>

    <!-- ðŸ’¥ Emergency Special Theme (High Contrast) -->
    <style name="EmergencyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sos_red</item>
        <item name="colorPrimaryVariant">@color/sos_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="android:statusBarColor">@color/sos_red</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="materialButtonStyle">@style/EmergencyButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/EmergencyFabStyle</item>
    </style>

    <!-- ðŸŽ¨ Modern Rounded Pink Button -->
    <style name="PinkButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/deep_pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="rippleColor">@color/soft_pink</item>
    </style>

    <!-- ðŸš¨ Emergency Red Button -->
    <style name="EmergencyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/sos_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="rippleColor">@color/hot_pink</item>
    </style>

    <!-- ðŸŽˆ Floating Action Button (Pink) -->
    <style name="PinkFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/hot_pink</item>

        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>

    <!-- ðŸš¨ Emergency Floating Action Button -->
    <style name="EmergencyFabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/sos_red</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="hoveredFocusedTranslationZ">10dp</item>
    </style>
    <style name="FeatureCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">?colorSecondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

    <style name="FeatureCardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FeatureCardSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item> <item name="android:statusBarColor">@android:color/transparent</item> </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/teal_200</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>
</resources>
